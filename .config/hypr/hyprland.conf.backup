#####################
### HYPRLAND CONF ###
#####################
# Wiki: https://wiki.hyprland.org/Configuring/

# Load Hyprland plugins
exec-once = hyprpm reload


################
### VARIABLES ##
################

# Program variables
$terminal = kitty
$fileManager = dolphin
$menu = wofi --show drun
$firefox = firefox
$mainMod = SUPER # Windows key


################
### MONITORS ###
################

# See https://wiki.hyprland.org/Configuring/Monitors/
monitor = ,preferred,auto,1.33


#############################
### ENVIRONMENT VARIABLES ###
#############################

# See https://wiki.hyprland.org/Configuring/Environment-variables/
env = XCURSOR_SIZE,24
env = HYPRCURSOR_SIZE,24

# Light theme configuration
env = GTK_THEME,Adwaita:light
env = QT_STYLE_OVERRIDE,Adwaita-Light
env = COLOR_SCHEME,prefer-light


###################
### AUTOSTART ###
###################

# Plugins
exec-once = hyprpm reload

# System services
exec-once = bash -c "systemctl --user restart pipewire pipewire-pulse wireplumber"
exec-once = pipewire
exec-once = wireplumber
exec-once = pipewire-pulse

# UI and applications
exec-once = hyprpaper
exec-once = waybar
exec-once = dunst

# Custom scripts
exec-once = bash -c "while true; do ~/.config/hypr/scripts/battery_notify.sh; sleep 300; done"
exec-once = ~/.local/bin/start-lock-services.sh

# KDE Connect
exec-once = /usr/bin/kdeconnectd
exec-once = /usr/bin/kdeconnect-indicator


##############
### RENDER ###
##############

render {
  direct_scanout = 0
}


#####################
### LOOK AND FEEL ###
#####################

# See https://wiki.hyprland.org/Configuring/Variables/

general {
    gaps_in = 5
    gaps_out = 6
    border_size = 2
    
    # Nord Light Theme Colors
    col.active_border = rgba(5e81acff)
    col.inactive_border = rgba(d8dee9ff)
    
    resize_on_border = false
    allow_tearing = false
    
    layout = dwindle
}

decoration {
    rounding = 6
    rounding_power = 2
    
    active_opacity = 1.0
    inactive_opacity = 1.0
    
    shadow {
        enabled = true
        range = 8
        render_power = 3
        color = rgba(2e344088)
    }
    
    blur {
        enabled = true
        size = 6
        passes = 1
        ignore_opacity = true
        xray = true
        new_optimizations = true
        vibrancy = 0.15
    }
}

animations {
    enabled = true
    
    bezier = easeOutQuint, 0.23, 1, 0.32, 1
    bezier = easeOutCubic, 0.33, 1, 0.68, 1
    bezier = easeInOutCubic, 0.65, 0, 0.35, 1
    bezier = linear, 0, 0, 1, 1
    bezier = almostLinear, 0.5, 0, 0.75, 1
    bezier = quick, 0.15, 0, 0.1, 1
    
    animation = global, 1, 3, default
    
    animation = windows, 1, 2, easeOutCubic, slide
    animation = windowsIn, 1, 2, easeOutCubic, slide
    animation = windowsOut, 1, 2, easeOutCubic, slide
    animation = windowsMove, 1, 2, easeOutCubic
    
    animation = border, 1, 2, easeOutQuint
    
    animation = fadeIn, 1, 2, easeOutCubic
    animation = fadeOut, 1, 1, easeOutCubic
    animation = fade, 1, 2, easeOutCubic
    
    animation = layers, 1, 2, easeOutCubic
    animation = layersIn, 1, 2, easeOutCubic, slide
    animation = layersOut, 1, 1, easeOutCubic, slide
    animation = fadeLayersIn, 1, 2, easeOutCubic
    animation = fadeLayersOut, 1, 1, easeOutCubic
    
    animation = workspaces, 1, 3, easeOutCubic, slide
    animation = workspacesIn, 1, 3, easeOutCubic, slide
    animation = workspacesOut, 1, 2, easeOutCubic, slide
}

layerrule = noanim, hyprpaper

misc {
    force_default_wallpaper = 0
    disable_hyprland_logo = true
}

#################
### LAYOUTS ###
#################

dwindle {
    pseudotile = true
    preserve_split = true
}

master {
    new_status = master
}

# Hyprexpo (Mission Control)
plugin {
    hyprexpo {
        columns = 3
        gap_size = 5
        bg_col = rgb(111111)
        workspace_method = first 1
        
        enable_gesture = true
        gesture_fingers = 4
        gesture_distance = 300
        gesture_positive = true
    }
}


#############
### INPUT ###
#############

# See https://wiki.hyprland.org/Configuring/Variables/#input
input {
    kb_layout = apt,apt_de,us
    resolve_binds_by_sym = 1
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =
    
    follow_mouse = 1
    sensitivity = 0
    
    touchpad {
        natural_scroll = true
    }
}

# Per-device input configs
device {
    name = epic-mouse-v1
    sensitivity = -0.5
}


#####################
### KEYBINDINGS ###
#####################

# Application launchers
bind = SUPER, T, exec, rofi -show drun
bind = SUPER, W, exec, $terminal
bind = SUPER, D, exec, $fileManager
bind = SUPER, F, exec, $firefox
bind = SUPER, B, exec, equibop
bind = SUPER, Z, exec, ~/.config/hypr/scripts/theme_toggle.sh

# Window management
bind = SUPER, M, killactive
bind = SUPER, H, fullscreen
bind = SUPER, P, togglefloating
bind = SUPER, Y, pseudo        # dwindle
bind = SUPER, N, togglesplit   # dwindle

# Workspace navigation
bind = SUPER, grave, hyprexpo:expo, toggle   # Mission Control
bind = SUPER, TAB, workspace, previous
bind = $mainMod, 1, exec, ~/.config/hypr/scripts/switch_workspace.sh 1
bind = $mainMod, 2, exec, ~/.config/hypr/scripts/switch_workspace.sh 2
bind = $mainMod, 3, exec, ~/.config/hypr/scripts/switch_workspace.sh 3
bind = $mainMod, 4, exec, ~/.config/hypr/scripts/switch_workspace.sh 4
bind = $mainMod, 5, exec, ~/.config/hypr/scripts/switch_workspace.sh 5
bind = $mainMod, 6, exec, ~/.config/hypr/scripts/switch_workspace.sh 6
bind = $mainMod, 7, exec, ~/.config/hypr/scripts/switch_workspace.sh 7
bind = $mainMod, 8, exec, ~/.config/hypr/scripts/switch_workspace.sh 8
bind = $mainMod, 9, exec, ~/.config/hypr/scripts/switch_workspace.sh 9
bind = $mainMod, 0, exec, ~/.config/hypr/scripts/switch_workspace.sh 10

# Move windows to workspaces
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# Focus navigation with arrow keys
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

# Move windows with SHIFT + arrow keys
bind = $mainMod SHIFT, left, movewindow, l
bind = $mainMod SHIFT, right, movewindow, r
bind = $mainMod SHIFT, up, movewindow, u
bind = $mainMod SHIFT, down, movewindow, d

# Resize windows with CTRL + arrow keys
bind = $mainMod CTRL, left, resizeactive, -20 0
bind = $mainMod CTRL, right, resizeactive, 20 0
bind = $mainMod CTRL, up, resizeactive, 0 -20
bind = $mainMod CTRL, down, resizeactive, 0 20

# Mouse workspace scrolling
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

# Mouse window management
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Screenshot utilities
layerrule = noanim, selection
bind = , Print, exec, grim -s 1.33 -g "$(slurp)" - | wl-copy
bind = SUPER SHIFT, S, exec, grim -s 1.33 -g "$(slurp)" - | wl-copy

# Keyboard layout switching
bind = SUPER, SPACE, exec, ~/.config/hypr/scripts/keyboard_layout_notify.sh

# Power and lock
bind = $mainMod, A, exec, hyprlock --grace 0
bind = $mainMod, Escape, exec, ~/.config/hypr/scripts/power_menu.sh
bindl = , XF86PowerOff, exec, ~/.config/hypr/scripts/power_menu.sh
bind = $mainMod, <, exit

# Media controls
bindel = ALT,XF86AudioRaiseVolume, exec, wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+ && ~/.config/hypr/scripts/volume_notify.sh
bindel = ALT,XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && ~/.config/hypr/scripts/volume_notify.sh
bindel = ,XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && ~/.config/hypr/scripts/volume_notify.sh
bindel = ,XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindel = ,XF86MonBrightnessUp, exec, brightnessctl -e4 -n2 set 5%+ && ~/.config/hypr/scripts/brightness_notify.sh
bindel = ,XF86MonBrightnessDown, exec, brightnessctl -e4 -n2 set 5%- && ~/.config/hypr/scripts/brightness_notify.sh

# Player controls
bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPause, exec, playerctl play-pause
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous
bindl = ALT_R, XF86AudioPause, exec, playerctl next
bindl = ALT_R, XF86AudioPlay, exec, playerctl next

####################
### WINDOW RULES ###
####################

# Default window behavior
windowrule = suppressevent maximize, class:.*

# Minecraft configuration
windowrule = float,class:(Minecraft),xwayland:(1),fullscreen:(1)
windowrule = move 0 0,size:1536x1024,title:(Minecraft)
xwayland:force_zero_scaling = 1

# Kitty transparency
windowrulev2 = opacity 0.85 0.85, class:^(kitty)$

# Dunst (notifications) styling
windowrulev2 = noborder, class:^(Dunst)$
windowrulev2 = noblur, class:^(Dunst)$
windowrulev2 = noanim, class:^(Dunst)$
windowrulev2 = float, class:^(Dunst)$
layerrule = animation slide, notifications

# Affinity and Wine application fixes
windowrulev2 = noblur, class:^(affinity\.(exe|photo|designer|publisher))$
windowrulev2 = noshadow, class:^(affinity\.(exe|photo|designer|publisher))$
windowrulev2 = noanim, class:^(affinity\.(exe|photo|designer|publisher))$

windowrulev2 = noblur, class:^(wine)$, title:^(.*)$
windowrulev2 = noshadow, class:^(wine)$, title:^(.*)$

# XWayland fixes
windowrule = nofocus,class:^$,title:^$,xwayland:1,floating:1,fullscreen:0,pinned:0